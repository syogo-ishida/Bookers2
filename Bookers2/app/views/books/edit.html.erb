<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Book</h2>
        <% if @book.errors.any? %>
          <div class="error_explantation">
            <div class="error_title">
              <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
            </div>
            <div class="error_content">
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
        <!-- form_with部分 -->
        <%= form_with model:@book, url: book_path(@book), local: true do |book| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= book.text_field :title, class: "book_title form-control" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= book.text_area :body, class: "book_opinion form-control" %>
        </div>
        <div class="form-group">
          <%= book.submit 'Update Book', class: "btn btn-secondary btn-success" %>
        </div>
        <% end %>
        <%= link_to "Show", book_path(@book) %>
        <span>|</span>
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>