<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <% if @user.errors.any? %>
          <div class="error_explantation">
            <div class="error_title">
              <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
            </div>
            <div class="error_content">
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
        <!-- form_with部分 -->
        <%= form_with model:@user, local: true do |user| %>
        <div class="form-group">
          <label for="user_name"></label>
          <%= user.text_field :name, class: "user_name form-control" %>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <%= user.attachment_field :profile_image, class: "user_image form-control-file" %>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= user.text_area :introduction, class: "user_introduction form-control" %>
        </div>
        <div class="form-group">
          <%= user.submit 'Update User', class: "btn btn-secondary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>