<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block py-0" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
  <h2 class="mt-3">New book</h2>
  <%= form_with model:book, url: books_path, local:true do |f| %>
  <div class="form_group">
    <label for="book_title">Title</label>
      <%= f.text_field :title, id: "book_title", class: "form-control book_title" %>
  </div>
  <div class="form_group">
    <label for="book_option">Option</label>
      <%= f.text_area :body, id: "book_option", class: "form-control comments" %>
  </div>
  <div class="form_group">
    <%= f.submit "Create Book", class: "btn btn-success" %>
  </div>
  <% end %>
</div>